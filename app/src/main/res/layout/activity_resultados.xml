<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resultadoTitulo"
        android:gravity="center"
        android:layout_marginTop="@dimen/margentitulos"
        android:textSize="@dimen/tamañotitulo"
        />
    
    <ListView
        android:id="@+id/lvResultados"
        android:layout_width="@dimen/ancholvResultado"
        android:layout_height="@dimen/tamañolvMonitoreo"
        android:layout_marginTop="@dimen/espaciotextos"
        android:padding="@dimen/Padding10"
        android:layout_gravity="center"
        >
    </ListView>

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botonFinalizar"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/espaciotextos"
        />

</LinearLayout>