<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ColorBody"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monitoreoTitulo"
        android:gravity="center"
        android:layout_marginTop="@dimen/margentitulos"
        android:textSize="@dimen/tamañotitulo"
        android:textColor="@color/ColorText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/espaciotextos"
        android:textColor="@color/ColorText"
        />
    <ListView
        android:id="@+id/lvMonitoreo"
        android:layout_width="@dimen/ancholvMonitoreo"
        android:layout_height="@dimen/tamañolvMonitoreo"
        android:padding="@dimen/Padding10"
        android:layout_gravity="center"
        >
    </ListView>

    <Button
        android:id="@+id/btnResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botonResultado"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/espaciotextos"
        />

</LinearLayout>