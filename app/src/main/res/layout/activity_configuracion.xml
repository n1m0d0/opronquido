<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/ColorBody"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/espacioentretextos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimensiontitulo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar tiempo"
            android:textColor="#FFFFFF"
            android:layout_margin="@dimen/espacioentretextos"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spTiempoInicio"
            android:layout_margin="@dimen/espacioentretextos"
            >

        </Spinner>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTiempoInicio"
            android:layout_margin="@dimen/espacioentretextos"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/espacioentretextos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimensiontitulo"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Seleccionar sensibilidad"
            android:layout_margin="@dimen/espacioentretextos"
            android:textColor="#FFFFFF"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spSensibilidad"
            android:layout_margin="@dimen/espacioentretextos">

        </Spinner>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confsiguiente"
            android:id="@+id/btnSiguiente"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="registrate"
            android:id="@+id/btnRegistrate"/>
    </LinearLayout>

</LinearLayout>
