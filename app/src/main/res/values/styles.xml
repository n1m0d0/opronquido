<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">@dimen/logoWidth</item>
        <item name="android:layout_height">@dimen/logoHeight</item>
        <item name="android:src">@drawable/zzz</item>
        <item name="android:description">@string/logo</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="ajaTIC">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ajaTic</item>
        <item name="android:textColor">@color/ajaTIC</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:text">@string/ajaTIC</item>
    </style>

</resources>
